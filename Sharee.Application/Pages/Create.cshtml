@page
@model Sharee.Application.Pages.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = "Create";
}

@section Scripts
{
    <script
        src="https://code.jquery.com/jquery-3.7.0.min.js"
        integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
        crossorigin="anonymous">
    </script>
    
    <script src="~/js/create.js"></script>
}

@section Styles
{
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" >
}

<h1>Create</h1>

<h4>Unit</h4>
<hr />

<div class="row justify-content-center g-3">
    <div class="col-8">
       <form method="post">
           
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
           <div class="row mb-3">
               <label asp-for="Unit.Code" class="form-label"></label>
               <input asp-for="Unit.Code" placeholder="Unit identity code" class="form-control"/>
               <span asp-validation-for="Unit.Code" class="text-danger"></span>
           </div>
           
           <div class="row mb-3">
               <label asp-for="Unit.Token" class="form-label"></label>
               <input asp-for="Unit.Token" placeholder="Token to authorization on service" class="form-control col token-label"/>
               <button class="btn btn-secondary btn-generate col-auto" type="button">Generate Token</button>
           </div>

           <div class="form-group row mb-3">
               <span asp-validation-for="Unit.Token" class="text-danger"></span>
           </div>
           
           <div class="form-group row justify-content-start mb-3">
               <input type="submit" value="Create" class="btn btn-primary col"/>
               <a class="col" asp-page="Index">Back to List</a>
           </div>
   
       </form> 
    </div>
</div>

